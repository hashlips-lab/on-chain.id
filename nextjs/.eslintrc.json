{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-double"],
    "react/jsx-curly-brace-presence": ["error", "never"]
  }
}
